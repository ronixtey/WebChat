@{
    ViewBag.Title = "Chat";
}

<div class="jumbotron">
    <ul id="discussion" class="list-unstyled" style="margin-bottom:30px"></ul>

    <div class="col-lg-offset-4">
        <div class="input-group center-block" data-bind="css: { 'has-error': isMessageEmpty }">
            <input type="text" id="message" class="form-control" placeholder="Message" />
            <span class="input-group-btn">
                <input type="button" id="sendmessage" class="btn btn-primary" value="Send" data-bind="click: clickHandler" />
            </span>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/Scripts/knockout-3.5.1.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/chat.js"></script>
}